header
    width 100%
    padding 25px 0 20px 0
    position fixed
    top 0
    z-index 100
    background-color $primary
    .row
        padding 0 30px
        height 100%
    nav
        width 100%
        height 100vh
        background-color $primary
        text-align center
        padding-top 50px
        position fixed
        left 0
        top 0
        opacity 0
        pointer-events none
        transform translateY(-10px)
        transition 0.1s ease-in
        .menu
            display flex
            flex-direction column
    .logo
        transform scale(1.3)
        flex 1
        height 50px
        padding 0.2rem
        text-indent -9999px
        background url(../../assets/logo.png) no-repeat
        background-size contain
        transform-origin left
        transition 0.2s ease-in
    .toggle-menu
        width 60px
        height 40px
        transform rotate(0deg) scale(.7)
        transition .5s ease-in-out
        cursor pointer
        span
            display block
            position absolute
            height 5px
            width 50%
            background $white
            opacity 1
            transform rotate(0deg)
            transition .25s ease-in-out
            &:nth-child(even)
                left 50%
                border-radius 0 9px 9px 0
            &:nth-child(odd)
                left 0px
                border-radius 9px 0 0 9px
            &:nth-child(1), &:nth-child(2)
                top 0px
            &:nth-child(3), &:nth-child(4)
                top calc("50% - 1px")
            &:nth-child(5), &:nth-child(6)
                top 100%
    &.active
        nav
            opacity 1
            transform none
            pointer-events all
            margin-top 90px
        .toggle-menu
            span
                &:nth-child(1),&:nth-child(6)
                    transform rotate(45deg)
                &:nth-child(2),&:nth-child(5)
                    transform rotate(-45deg)
                &:nth-child(1)
                    left 7px
                    top 10px
                &:nth-child(2)
                    left 27px
                    top 10px
                &:nth-child(3)
                    left -50%
                    opacity 0
                    background-color $secondary
                &:nth-child(4)
                    left 100%
                    opacity 0
                    background-color $secondary
                &:nth-child(5)
                    left 7px
                    top 30px
                &:nth-child(6)
                    left 27px
                    top 30px
    .menu__link
        padding 18px 0.8rem
        color #fff
        display block
        position relative
        text-align center
        text-decoration none
        font-weight 500
        &.active
            color $secondary
@media screen and (min-width 481px)
    header
        width 100%
        padding 25px 0 20px 0
        position fixed
        top 0
        z-index 100
        transition 0.1s ease-in
        &.active
            nav
                margin 0
        &.scrolled
            box-shadow: 0 2px 15px 3px rgba(0, 0, 0, 0.3);
            .logo
                transform scale(1.5)
        nav
            margin 0
            pointer-events auto
            display flex
            align-items center
            height 100%
            opacity 1
            top initial
            left initial
            transform initial
            position initial
            width auto
            padding 0
            .menu
                flex-direction row
        .toggle-menu
            display none